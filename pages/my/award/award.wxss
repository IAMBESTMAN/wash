page{
	background: #f2f2f2;
}
.title {
	width: 100%;
	height: 100rpx;
	line-height: 100rpx;
	padding: 0 5%;
	box-sizing: border-box;
	background: #fff;
	/*overflow: hidden;*/
}
.title view{
	float: left;
	width: 33%;
	height: 97%;
	text-align: center;
	font-size: 36rpx;
}
.active {
	border-bottom: 3px solid red;
}
.prompt{
	width: 100%;
	height: 60rpx;
	background: #fbedd9;
	font-size: 16px;
	overflow: hidden;
}
.prompt > view {
	width: 100%;
	height: 100%;
	line-height: 60rpx;
	float: left;
	overflow: hidden;
	font-size: 30rpx;
	color: #262626;	
}
.prompt > view > text {
	display: block;
	float: left;
	width: 90%;
	text-align: center;
}
.prompt > view > i {
	display: block;
	float:right;
	text-align: center;
	width: 10%;
}
.order_list_content{
	margin-bottom: 20rpx;
}
.order_title {
	padding: 0 20rpx;
	height: 60rpx;
	line-height: 60rpx;
	box-sizing: border-box;
	display: flex;
	justify-content: space-between;
	font-size: 28rpx;
	color: #262626;
	background: #fff;
}
.order_footer {
	padding: 0 20rpx;
	height: 60rpx;
	line-height: 60rpx;
	font-size: 28rpx;
	color: #262626;
	background: #fff;
	box-sizing: border-box;
	text-align: right;
}

.order_section_content{
	width: 100%;
	height: 200rpx;
	background: #f2f2f2;
	padding: 40rpx;
	box-sizing: border-box;
	margin-bottom: 20rpx;
	overflow: hidden;
}
.order_section{
	background: #fff;
}
.order_section_content image{
	float: left;
	width: 80px;
	height: 80px;
	margin-right: 40rpx;
	vertical-align: top;
}
.order_section_content view {
	float: left;
	width: 70%;
	font-size: 28rpx;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
	overflow: hidden;
}



















